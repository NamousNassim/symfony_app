{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles for centering content horizontally */
        .container-centered {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .product-card {
            width: 300px; /* Définissez la largeur minimale souhaitée pour minimiser les produits */
            margin-left: 180px;
            text-align: center;
        }

        /* Styles pour l'effet de zoom */
        .product-zoom {
            transition: transform 0.3s; /* Durée de la transition */
        }

        /* Applique un zoom au survol de la souris */
        .product-card.product-zoom:hover {
            transform: scale(1.1); /* Ajustez la valeur pour le niveau de zoom souhaité */
        }
    </style>
    {% endblock %}

