                            <div class="product-body">
                                <h5 class="product-title">{{ produit.nom }}</h5>
                                <p class="product-price">{{ produit.prix }} "$"</p>
                                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary">Détails</a>
                                <a href="{{ path('app_paiement_index') }}" class="btn btn-primary">Acheter</a>

                            </div>
                        </div>
                    </div>
                {% endfor %}
